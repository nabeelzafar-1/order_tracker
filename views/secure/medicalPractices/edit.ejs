<%- include('../../includes/header') -%>

<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary">?</button>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>UserId:</b> <%= medicalPractice._id %>
    </div>
  </div>

</div>

<form action="/api/secure/medicalPractice/edit/<%= medicalPractice._id%>?_method=PUT" method="PUT"  name="f1"  onsubmit="return validate()">

  <div class="row form-group mb-4">
    <div class="col">
      <label for="practiceName">Practice Name</label>
      <input type="text"  class="form-control" id="practiceName" name="practiceName" value="<%= medicalPractice.practiceName %>" placeholder="Practice Name" required>
      <span id="practicenamelocation" style="color:red"></span></td></tr> 
    </div>

    <div class="col">
      <label for="phone">Phone</label>
      <input type="number" class="form-control" id="phone" name="phone" value="<%= medicalPractice.phone %>" placeholder="Phone" required>
    </div>
  </div>
  <div class="row form-group mb-4">
    <div class="col">
      <label for="mailingAddress">Mail Address</label>
      <input type="text" class="form-control" id="mailingAddress" name="mailingAddress" value="<%= medicalPractice.mailingAddress %>" placeholder="Mail Address" required>
    </div>

    <div class="col">
      <label for="mailingCity">Mailing City</label>
      <input type="text" class="form-control" id="mailingCity" name="mailingCity" value="<%= medicalPractice.mailingCity %>" placeholder="Shipping City" required>
    </div>
    <div class="col">
      <label for="mailingetate">Mailing State</label>
      <input type="text" class="form-control" id="mailingState" name="mailingState" value="<%= medicalPractice.mailingState %>" placeholder="Mailing Sate" required>
    </div>

    <div class="col">
      <label for="mailingZip">Mailing Zip</label>
      <input type="number" class="form-control" id="mailingZip" name="mailingZip" value="<%= medicalPractice.mailingZip %>" placeholder="mailingZip" required>
    </div>
 
   
  </div>
  <div class="row form-group mb-4">
    <div class="col">
      <label for="shippingAddress">Shipping Address</label>
      <input type="text" class="form-control" id="shippingAddress" name="shippingAddress" value="<%= medicalPractice.shippingAddress %>" placeholder="Mail Addresse" required>
    </div>

    <div class="col">
      <label for="shippingCity">Shipping City</label>
      <input type="text" class="form-control" id="shippingCity" name="shippingCity" value="<%= medicalPractice.shippingCity %>" placeholder="Shipping Address" required>
    </div>
    <div class="col">
      <label for="shippingState">Shippinge State</label>
      <input type="text" class="form-control" id="shippingState" name="shippingState" value="<%= medicalPractice.shippingState %>" placeholder="Shipping Address" required>
    </div>

    <div class="col">
      <label for="shippingZip">Shipping Zip</label>
      <input type="number" class="form-control" id="shippingZip" name="shippingZip" value="<%= medicalPractice.shippingZip %>" placeholder="Shipping Zip" required>
    </div>
  
  </div>
  <div class="row form-group mb-4">
    <div class="col">
      <label for="fax">fax</label>
      <input type="number" class="form-control" id="fax" name="fax" value="<%= medicalPractice.fax %>" placeholder="fax" required>
    </div>

    <div class="col">
      <label for="website">Website</label>
      <input type="text" class="form-control" id="website" name="website" value="<%= medicalPractice.website %>" placeholder="Website" required>
    </div>
  </div>
  <div class="row form-group mb-4">
    <div class="col">
      <label for="status">Status</label>
      <input type="text" class="form-control" id="status" name="status" value="<%= medicalPractice.status %>" placeholder="Status" required>
    </div>

  </div>


  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Update Medical Practices</button>

    <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete medicalPractices</button>

  </div>

</form>




<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">You are about to remove a Medical Practices record.</div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>
          This will remove the Medical Practices record of <b class="fw-bold"><%= medicalPractice.firstName %> <%= medicalPractice.lastName %></b><br/>
          Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <form action="/api/secure/medicalPractice/edit/<%= medicalPractice._id %>?_method=DELETE" method="POST" class="position-relative">
          <button type="submit" class="btn btn-primary">Yes, Remove Medical Practices</button>
        </form>
      </div>
    </div>
  </div>
</div>